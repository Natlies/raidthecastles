<?xml version="1.0"?>
<!DOCTYPE cross-domain-policy SYSTEM "http://www.macromedia.com/xml/dtds/cross-domain-policy.dtd">
<cross-domain-policy>
        <site-control permitted-cross-domain-policies="master-only" />
        <allow-access-from domain="*.zynga.com" />
        <allow-access-from domain="*.zgncdn.com" />
		<allow-access-from domain="*.akamaihd.net" />
        <allow-http-request-headers-from domain="*.zynga.com" headers="*"/>
        <allow-http-request-headers-from domain="*.zgncdn.com" headers="*"/>
        <allow-http-request-headers-from domain="*.akamaihd.net" headers="*"/>
</cross-domain-policy>
